{
  "extends": ["stylelint-config-standard"],
  "customSyntax": "postcss-lit",
  "rules": {
    "at-rule-no-unknown": null,
    "annotation-no-unknown": null,
    "custom-property-pattern": [
      "^_?([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      {
        "message": "Expected custom property name \"%s\" to be kebab-case"
      }
    ]
  }
}
